<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pollutedLocsMapsActivity" >

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pollutedLocMarkerIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_location_pin_32dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:orientation="vertical"
            map:layout_constraintEnd_toStartOf="@+id/pollutedLocCustomConfirmButton"
            map:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/pollutedLocCustomSearchET"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:cursorVisible="false"
                android:ems="10"
                android:hint="@string/loading_location"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/showReportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_button"
                android:text="see report"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <Button
            android:id="@+id/pollutedLocCustomConfirmButton"
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_corner_button"
            android:text="CONFIRM"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toStartOf="@+id/pollutedLocSearchTypeButton"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/pollutedLocSearchTypeButton"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_corner_button"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="CUSTOM"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            map:layout_constraintBottom_toTopOf="@+id/listLinearLayout"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/graphButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:background="@drawable/rounded_corner_button"
                            android:backgroundTint="#F77777"
                            android:text="Level graph"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/summaryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:background="@drawable/rounded_corner_button"
                            android:backgroundTint="#66A4EB"
                            android:text="Summary"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:background="@android:color/transparent" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/reportButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:background="@drawable/rounded_corner_button"
                            android:padding="5dp"
                            android:text="@string/report_pollution"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="@android:color/transparent" />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/listLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#8DE0F7FA"
            android:orientation="horizontal"
            android:padding="-2dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageViewAir"
                android:layout_width="@dimen/marker_legend_width"
                android:layout_height="match_parent"
                android:background="@color/colorAir"
                android:src="@drawable/blank_shape_0x0_hxw" />

            <TextView
                android:id="@+id/textViewAir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="13dp"
                android:text="@string/pollution_type_air" />

            <ImageView
                android:id="@+id/imageViewWater"
                android:layout_width="@dimen/marker_legend_width"
                android:layout_height="match_parent"
                android:background="@color/colorWater"
                android:src="@drawable/blank_shape_0x0_hxw" />

            <TextView
                android:id="@+id/textViewWater"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="13dp"
                android:text="@string/pollution_type_water" />

            <ImageView
                android:id="@+id/imageViewNoise"
                android:layout_width="@dimen/marker_legend_width"
                android:layout_height="match_parent"
                android:background="@color/colorNoise"
                android:src="@drawable/blank_shape_0x0_hxw" />

            <TextView
                android:id="@+id/textViewNoise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="13dp"
                android:text="@string/pollution_type_noise" />

            <ImageView
                android:id="@+id/imageViewLand"
                android:layout_width="@dimen/marker_legend_width"
                android:layout_height="match_parent"
                android:background="@color/colorLand"
                android:src="@drawable/blank_shape_0x0_hxw" />

            <TextView
                android:id="@+id/textViewLand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="13dp"
                android:text="@string/pollution_type_land" />

            <ImageView
                android:id="@+id/imageViewOthers"
                android:layout_width="@dimen/marker_legend_width"
                android:layout_height="match_parent"
                android:background="@color/colorOthers"
                android:src="@drawable/blank_shape_0x0_hxw" />

            <TextView
                android:id="@+id/textViewOthers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/pollution_type_others" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
